<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Editar Pedido</title>
  <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>

    <% row.forEach(function(pedido) { %>
        <form action="/pedidos_update" method="POST" class="mx-auto" style="max-width: 400px;">
            <input type="hidden" name="id" value="<%= pedido.PedidoID %>">
            <div class="form-group">
                <label>ID Pedido</label>
                <input value="<%= pedido.PedidoID %>" type="text" name="idPedido" class="form-control" id="exampleFormControlInput1" placeholder="Ingresa ID">
            </div>
            <div class="form-group">
                <label>Precio</label>
                <input value="<%= pedido.Precio %>" type="text" name="precio" class="form-control" id="exampleFormControlInput1" placeholder="Ingresa Precio">
            </div>
            <div class="form-group">
                <label>Cantidad</label>
                <input value="<%= pedido.Cantidad %>" name="cantidad" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Ingresa Cantidad">
            </div>
            <div class="form-group">
                <label>Descuento</label>
                <input value="<%= pedido.Descuento %>" name="descuento" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Ingresa Descuento">
            </div>
            <div class="form-group">
                <label>Ganancia</label>
                <input value="<%= pedido.Ganancia %>" name="ganancia" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Ingresa Ganancia">
            </div>
            <div class="form-group">
                <label for="fechaEnvio">Fecha del Envio</label>
                <input value="<%= pedido.OrdenFecha %>" type="date" id="fechaEnvio" name="fechaEnvio" class="form-control">
            </div>
            <div class="form-group">
                <label for="fechaPedido">Fecha del Pedido</label>
                <input value="<%= pedido.EnvioFecha %>" type="date" id="fechaPedido" name="fechaPedido" class="form-control">
            </div>
            <div class="form-group">
                <label>Modo Envio</label>
                <input value="<%= pedido.ModoEnvio %>" name="modoEnvio" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Ingresa Modo envio">
            </div>
            <!--div class="form-group">
                <label>idUsuarioModifica</label>
                <input value="<%= pedido.idUsuarioModifica %>" name="idUsuarioModifica" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Ingresa Usuario Modifica">
            </div-->
            <button type="submit" class="btn btn-success mb-2">Actualizar</button>
        </form>
        
      <% }); %>
      

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
      <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>    
  </body>
</html>