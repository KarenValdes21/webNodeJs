<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CRUD De Karen :D</title>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">CRUD Karen</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/clientes">Clientes</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/pedidos">Pedidos</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/productos">Productos</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <h2 >Listado de Cliente <button class="btn btn-primary float-right" data-toggle="modal" data-target="#myModal">Agregar Cliente</button></h2>
      <table class="table">
        <thead>
          <tr>
              <th scope="col">ID</th>
              <th scope="col">Nombre</th>
              <th scope="col">SubCategoria</th>
              <th scope="col"></th>
          </tr>
      </thead>
        <tbody>
          <% results.forEach(function(cliente) { %>
            <tr>
              <td><%= cliente.id %></td>
              <td><%= cliente.ClienteID %></td>
              <td><%= cliente.fechaCrea %></td>
              <td>
                <a href="/clientes/<%= cliente.id %>/data" class="btn btn-warning btn-sm editar-btn">Editar</a>
                <a href="/clientes/<%= cliente.id %>" onclick="return confirm('Are Sure Want To Deleted ?')" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
            </tr>
          <% }); %>
        </tbody>
      </table>




      <!-- En tu vista EJS, por ejemplo, productos.ejs -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title text-primary" style="align-content: center;">Insertar Info Producto</h5>    
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
              </button>
          </div>
          <div class="modal-body">
              <form action="/cliente_add" method="POST">
                <div class="form-group">
                  <label>Nombre Cliente</label>
                  <input type="text" name="ClienteID" class="form-control" id="exampleFormControlInput1" placeholder="Ingresa Nombre">
              </div>
              <!--div class="form-group">
                  <label>Usuario Crea</label>
                  <input name="IdUsuarioCrea" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Ingresa Usuario Crea">
                  </div-->
                  <button type="submit" class="btn btn-primary mb-2">Guardar</button>
              </form>
          </div>
      </div>
  </div>
</div>







  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
